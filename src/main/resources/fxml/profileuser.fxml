<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ProfileUserController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- Conteneur principal -->
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <!-- Titre -->
        <Label text="Profil Utilisateur" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Conteneur pour photo et informations -->
        <HBox spacing="40" alignment="CENTER_LEFT">
            <!-- Zone photo de profil -->
            <VBox spacing="10" alignment="CENTER">
                <!-- Cadre pour l'image -->
                <StackPane>
                    <!-- Cercle pour l'image ronde -->
                    <Circle radius="80" fill="white" stroke="#ddd" strokeWidth="2"/>

                    <!-- Image de profil -->
                    <ImageView fx:id="profileImage" fitHeight="150" fitWidth="150" preserveRatio="true">

                    </ImageView>

                    <!-- Bouton pour changer l'image -->
                    <Button text="Changer" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12px;"
                            StackPane.alignment="BOTTOM_RIGHT" onAction="#handleChangeProfileImage">
                        <StackPane.margin>
                            <Insets right="10" bottom="10"/>
                        </StackPane.margin>
                    </Button>
                </StackPane>

                <Label text="Taille max: 2MB" style="-fx-font-size: 10px; -fx-text-fill: #777;"/>
            </VBox>

            <!-- Formulaire d'informations -->
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Ligne 1: Nom -->
                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="lastNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

                <!-- Ligne 2: Prénom -->
                <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Ligne 3: Email -->
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Ligne 4: Téléphone -->
                <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Ligne 5: Date de naissance -->
                <Label text="Date de naissance:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="birthDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </HBox>

        <!-- Zone d'adresse -->
        <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 0 0 0 180;">
            <Label text="Adresse:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="addressField" prefWidth="400" promptText="Adresse complète"/>
        </VBox>

        <!-- Boutons d'action -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="saveButton" text="Enregistrer" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                    onAction="#handleSave"/>
            <Button fx:id="cancelButton" text="Annuler" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                    onAction="#handleCancel"/>
            <Button fx:id="changePasswordButton" text="Modifier mot de passe" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"
                    onAction="#handleChangePassword"/>
        </HBox>
    </VBox>
</AnchorPane>