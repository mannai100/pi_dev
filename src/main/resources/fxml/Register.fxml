<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RegisterController"
            prefHeight="400.0" prefWidth="600.0">
    
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <Text text="Inscription" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" promptText="Entrez votre nom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="prenomField" promptText="Entrez votre prénom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="Entrez votre email" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Mot de passe:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Adresse:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="adresseField" promptText="Entrez votre adresse" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                
                <Label text="Téléphone:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="telephoneField" promptText="Entrez votre téléphone" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>
            
            <Button fx:id="registerButton" text="S'inscrire" onAction="#handleRegister"/>
            
            <HBox alignment="CENTER" spacing="10">
                <Label text="Déjà inscrit?"/>
                <Hyperlink fx:id="loginLink" text="Se connecter" onAction="#handleLogin"/>
            </HBox>
        </VBox>
    </center>
    
</BorderPane>
